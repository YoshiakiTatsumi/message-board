<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<form class="form-horizontal">
  <div class="form-group">
    <div class="col-md-8">
    <label for="message_name" class="control-label col-md-2">名前:</label>
  <%= f.text_field :name, class: "form-control", rows:"1", placeholder:"おなまえは？" %>
    </div>
  </div>
  
  <div class="form-group">
   <div class="col-md-8">
  <label for="message_age" class="control-label col-md-2">年齢:</label>
  <%= f.number_field :age, class: "form-control", rows:"1", placeholder:"ねんれいは？" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-md-8">
  <label for="message_content" class="control-label col-md-2">内容:</label>
  <%= f.text_area :body, class: "form-control", rows: "3", placeholder: "なにしているの？" %>
    </div>
  </div>
  
  <div class="form-group">
   <div class="col-md-8">
  <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
</form>
<% end %>